# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

SYSTYPE=$(uname)

PATH="$HOME/Developer/homebrew/bin:$PATH"
alias cdmmp="cd $HOME/Developer/svn/nsms/src/n/nsms-mmp-scripts/trunk/"
alias cdvip="cd $HOME/Developer/svn/nsms/config/network/vip-firewalls"
alias cdrep="cd $HOME/Library/AutoPkg/RecipeRepos/com.github.fuzzylogiq.autopkg-recipes"
alias cdapkg="cd $HOME/Library/AutoPkg/RecipeRepos/com.github.fuzzylogiq.autopkg-recipes"

if [[ $SYSTYPE == "Darwin" ]]; then
  eval `gdircolors $HOME/.dir_colors/dircolors.256dark`
#  alias ls="gls --color"
#  alias ll="gls --color -l"
  export VIMRUNTIME="$HOME/Developer/homebrew/Cellar/vim/7.4.488/share/vim/vim74"
  function vpn-connect {
    /usr/bin/env osascript <<-EOF
    tell application "System Events"
            tell current location of network preferences
                    set VPN to service "Oxford VPN"
                    if exists VPN then connect VPN
                    repeat while (current configuration of VPN is not connected)
                        delay 1
                    end repeat
            end tell
    end tell
EOF
  }

  function vpn-disconnect {
    /usr/bin/env osascript <<-EOF
    tell application "System Events"
            tell current location of network preferences
                    set VPN to service "Oxford VPN"
                    if exists VPN then disconnect VPN
            end tell
    end tell
    return
EOF
  }
fi

alias cdsvn="cd $HOME/Developer/svn/nsms"
alias vs="vi $HOME/.ssh/config"
alias vv="vi $HOME/.vimrc"
alias vz="vi $HOME/.zshrc"
alias cdpup="cd $HOME/Developer/svn/nsms/config/puppet"
if [[ -f ~/.sshconfig]]; then
  alias ssh="~/.sshconfig && ssh"
fi

# zstyle completion options
zstyle ':completion:*' verbose yes
zstyle ':completion:*:descriptions' format '%B%d%b'
zstyle ':completion:*:messages' format '%d'
zstyle ':completion:*:warnings' format 'No matches for: %d'
zstyle ':completion:*' group-name ''

setopt nobeep
